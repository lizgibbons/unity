										});
									}
									else {
										insertAttIntoFeed(result[0].id, null);
									}
								}
								else {
									showFeedError(result[0].errors.message);
								}
							},
							onFailure : function(error, source) {
								showFeedError(error);
								$(".post-box").css('pointer-events', '').css('opacity', '');
							}
					});
					// end sending
				}

